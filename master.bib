journal = {The Astronomy and Astrophysics Review},
keywords = {Cooling flows,Galaxy clusters,Galaxy groups,Halos,Intracluster matter,Large scale structure of the Universe,Large-scale magnetic fields,Mini-halos,Radio sources,Relics,and superclusters,clusters},
month = {oct},
