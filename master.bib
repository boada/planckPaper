journal = {Monthly Notices of the Royal Astronomical Society},
keywords = {cosmology: observations,galaxies: clusters: general,galaxies: haloes,galaxies: kinematics and dynamics,methods: numerical},
month = {jul},
number = {3},
pages = {2606--2615},
title = {{Brighter galaxy bias: underestimating the velocity dispersions of galaxy clusters}},
