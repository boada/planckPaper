journal = {Space Science Reviews},
keywords = {Cosmology: theory,Early Universe,Galaxies: clusters,Hydrodynamics,Numerical simulations,X-ray: galaxies},
month = {apr},
number = {1-4},
pages = {93--139},
title = {{Large-Scale Structure Formation: From the First Non-linear Objects to Massive Galaxy Clusters}},
url = {http://adsabs.harvard.edu/abs/2015SSRv..188...93P},
volume = {188},
year = {2014}
}
@article{Hill2008,
