keywords = {cD,galaxies: elliptical and lenticular,galaxies: evolution,galaxies: formation},
month = {dec},
number = {1},
pages = {250--267},
title = {{MORPHOLOGICAL QUENCHING OF STAR FORMATION: MAKING EARLY-TYPE GALAXIES RED}},
