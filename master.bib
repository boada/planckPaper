journal = {The Astrophysical Journal},
keywords = {COSMOLOGY: OBSERVATIONS,GALAXIES: DISTANCES AND REDSHIFTS,GALAXIES: EVOLUTION,GALAXIES: FORMATION,GALAXIES: STRUCTURE},
month = {oct},
